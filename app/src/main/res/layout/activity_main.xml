<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_one" />

    <Button
        android:id="@+id/counterButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_default"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_two" />

    <Button
        android:id="@+id/counterButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_default"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_three" />

    <Button
        android:id="@+id/counterButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_default"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</LinearLayout>